<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= contact._id %>">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Please enter your name..."
                    name="name" value="<%= contact.name%>" required>
                </div>

                <div class="form-group">
                    <label for="phoneTextField">Contact Number</label>
                    <input type="number" class="form-control" id="phoneTextField" placeholder="Please enter your contact number..."
                    name="contact" value="<%= contact.contact %>" required>
                </div>

                <div class="form-group">
                    <label for="mailTextField">Contact E-mail</label>
                    <input type="email" class="form-control" id="mailTextField" placeholder="Please enter your e-mail id..."
                    name="email" value="<%= contact.email %>" required>
                </div>

                <button class="btn btn-primary" type="submit"><i class= "fas fa-edit"></i>SUBMIT</button>

                <a href="/contact-list" class="btn btn-warning"><i class="fas fa-undo"></i>CANCEL</a>

            </form>
        </div>
    </div>

</div>